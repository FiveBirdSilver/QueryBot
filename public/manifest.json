{
  "manifest_version": 3,
  "name": "GenAIon",
  "version": "1.0",
  "description": "A Chrome Extension with GA4 Chatbot.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "/imgs/64.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": ["sidePanel", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "/imgs/16.png",
    "32": "/imgs/32.png",
    "64": "/imgs/64.png"
  }
}
